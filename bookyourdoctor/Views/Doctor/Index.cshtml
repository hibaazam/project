                    <div class="form-group">
                        <label>Name :</label>
                        <input type="text" name="name" class="form-control text" placeholder="Enter Your Name" style="height:40px;min-width:550px" />
                    </div>
                    <div class="form-group">
                        <label>Email :</label>
                        <input type="text" name="name" class="form-control text" placeholder="Enter Your Name" style="height:40px;min-width:550px" />
                    </div>
                    <div class="form-group">
                        <label>Password :</label>
